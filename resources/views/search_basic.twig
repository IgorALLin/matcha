
<!doctype html>
<html lang="en">
  <head>
    <base href="{{ path_for('home') }}">
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link rel="shortcut icon" href="{{ base_url() }}/public/img/switch.png" type="image/x-icon">
    <link rel="stylesheet" href="//cdn.rawgit.com/necolas/normalize.css/master/normalize.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" -integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous"> 
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bulma/0.7.1/css/bulma.css">
    <link rel="stylesheet" href="{{ base_url() }}/public/css/style.css">
    <link rel="stylesheet" href="{{ base_url() }}/public/css/animate.css">
    <link rel="stylesheet" href="{{ base_url() }}/public/css/multi-select.css">
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Roboto:300,300italic,700,700italic">
    <link href="https://fonts.googleapis.com/css?family=Charmonman" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Charmonman|Dancing+Script" rel="stylesheet">
    <link rel="stylesheet" href="{{ base_url() }}/public/js/ui/jquery-ui.css">



    <title>Matcha</title>
  </head>
  <body>
     <article class="wrapper" id="main_background">
      <header class="common_header" id="common_head">
            <nav class="navbar">
    <div class="logo_wrapper">
            <a href="{{ path_for('home') }}" class="logo">Matcha</a>
    </div>   
    
      {% if auth.check %}
      <div class="user_wrapper">You can't use all features until you fill up your profile</div>
      <div class="user_wrapper">
        <div class="login_wrapper_user">
                <div class="dropdown is-hoverable">
                  <div class="dropdown-trigger">
                    <button class="button is-info" aria-haspopup="true" aria-controls="dropdown-menu4">
                      <span data-id="{{ auth.user.id }}">
                                    {{ auth.user.username }}</span>
                      <span class="icon is-small">
                        <i class="fas fa-angle-down" aria-hidden="true"></i>
                      </span>
                    </button>
                  </div>
              <div class="dropdown-menu" role="menu">
                <div class="dropdown-content">
                  <div class="dropdown-item">
                     <div class="dropdown_menu_list">
                            <a class="dropdown_menu_item" href="{{ path_for('user.profile') }}">Profile</a>
         
                            <a class="dropdown_menu_item" href="{{ path_for('auth.password.change') }}">Change password</a>
                  

                             <a class="dropdown_menu_item" href="{{ path_for('auth.signout') }}">Sign Out</a>
                        
                    </div>
                  </div>
                </div>
              </div>
            </div>
         </div>
        {% else %}
        <div class="login_wrapper_buttons">
            <a class="button is-info" href="{{ path_for('auth.signin') }}">Login</a>
            <a class="button is-info" href="{{ path_for('auth.signup') }}">Sign Up</a>
        </div>
        {% endif %}
      </div>
</nav>
      </header>
     
        <div class="main_container basic_show">
                    
                 <div id="toTop"> ^ Back to top</div>
                <div class="search_container" id="search">
                   <div class="map_section">
                <div id="map_search"></div>
                <div id="map_message"></div>
                <div id="lat_lng"></div>
            </div>
            <div id="form_status"></div>

                </div>

          
                <section class="gallery_response_style" id="gallery_response">

                </section>
        </div>
        <footer class="common_footer">
           {% include 'templates/partials/footer.twig' %}
        </footer>
    </article>

    {% block javascript %}
      <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
      <script src="https://js.pusher.com/4.2/pusher.min.js"></script>

      <script src="{{base_url()}}/public/js/basic_searchgeo.js"></script>
      
      
      <script src="{{base_url()}}/public/js/ui/jquery-ui.js"></script>
      
      <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    {% endblock %}
  </body>
</html>
   