{% extends 'templates/app.twig' %}

{% block content %}

<div id="notification">

  <ul class="nav nav-tabs">
    <li class="nav-item">
      <a v-bind:class="wached" href="#" @click="switchTabs">Who wached my profile</a>
    </li>
    <li class="nav-item">
      <a v-bind:class="browsing" href="#" @click="switchTabs">Browsing history</a>
    </li>
    <li class="nav-item">
      <a v-bind:class="liked" href="#" @click="switchTabs">Who liked me</a>
    </li>
